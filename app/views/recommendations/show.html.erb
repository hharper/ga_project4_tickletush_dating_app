<h1> MATCHES I'VE MADE </h1>

<% for recommendation in @recommendations %>
    <!-- I HAVE RECOMMENDED: -->
    <% @first_user = recommendation.first_match_id %>
      <% if @first_user %>
        <% @profile_one = Profile.find_by(user_id: @first_user) %>
          <% if @profile_one %>
          <%= @profile_one.name %>
          <img src="<%= @profile_one.photo_url %>">
          <% end %>
        <% end %>

    <% @second_user = recommendation.second_match_id %>
      <% if @second_user %>
      <% @profile_two = Profile.find_by(user_id: @second_user) %>
        <% if @profile_two %>
        <img src="<%= @profile_two.photo_url %>">
          <%= @profile_two.name %>
          <% end %>
        <% end %>
</br>
<% end %>

